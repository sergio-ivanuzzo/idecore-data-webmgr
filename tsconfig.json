{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./dist/",
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "paths": {
      "constants/*": [
        "./src/constants/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "containers/*": [
        "./src/containers/*"
      ],
      "store/*": [
        "./src/store/*"
      ],
      "styles/*": [
        "./src/styles/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
